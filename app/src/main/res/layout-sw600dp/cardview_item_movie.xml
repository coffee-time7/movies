<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_id"
    android:backgroundTint="#FFF"
    android:clickable="true"
    android:minWidth="150dp"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/llcardview"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movie_img_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cv_image_image_description" />

        <TextView
            android:id="@+id/movie_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:text="@string/movie_title"
            android:layout_marginTop="8dp"
            android:textColor="#2d2d2d"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:layout_marginTop="8dp"
            android:text="@string/_2020_05_05"
            android:textColor="#2d2d2d"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cbCardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_heart_outline"
            android:gravity="center|start"
            android:text="@string/_12345"
            android:textSize="12sp" />

    </LinearLayout>


</androidx.cardview.widget.CardView>